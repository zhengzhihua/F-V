                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/price2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="详情"
                    android:padding="5dp"
                    android:textColor="@color/wordcolor"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/shopdetail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商家"
                    android:padding="5dp"
                    android:textColor="@color/wordcolor"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
