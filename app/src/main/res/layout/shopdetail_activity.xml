<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/twobutton1"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                 android:layout_width="match_parent"
                  android:layout_height="350dp">
                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:src="@drawable/head"
                    android:scaleType="fitXY"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品名"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/shopname2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>

                <TextView
                    android:id="@+id/price2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="14dp"
                    android:hint="输入"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="/斤"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:id="@+id/yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="原价"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/primaryprices1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="14dp"
                    android:hint=""/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="/斤"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="详情"
                    android:padding="5dp"
                    android:textColor="@color/wordcolor"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/shopdetail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商家"
                    android:padding="5dp"
                    android:textColor="@color/wordcolor"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/company1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:padding="5dp"
                    android:textColor="@color/wordcolor"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/shoptype2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorforbackword"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相关评价"
                        android:padding="5dp"
                        android:textSize="25dp"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="产地"
                    android:padding="5dp"
                    android:textColor="@color/wordcolor"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordcolor"
                    android:text=":"/>
                <TextView
                    android:id="@+id/productplace1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/wordcolor"
                    android:textSize="20dp"
                    android:hint="@string/hint_detail"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorforbackword"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相关评价"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundline">
            </View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/backgroundline">
    </View>
    <LinearLayout
        android:id="@+id/twobutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="18dp"
            android:textColor="@color/wordcolor"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/increasenum1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/increase"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/shopnum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/wordcolor"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/addnum1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/add2"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/progress2">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/car1"
            android:background="@color/progress2"
            />

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/payfor"
            android:background="@color/progress2"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>