<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/backgroundline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="订单状态"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:padding="3dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/orderformstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:hint="暂无数据"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:padding="3dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/adress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:hint="暂无数据"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:padding="3dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/startorderform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:hint="暂无数据"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="订单完成时间"
                android:padding="3dp"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/finishorderform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/wordblack"
                android:textSize="16dp"
                android:hint="暂无数据"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/backgroundline"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:padding="3dp"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/shop_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="单价"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:padding="3dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/simpleprice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="总价"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:padding="3dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/total_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/backgroundline"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商家名"
                    android:padding="3dp"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/shangjia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:padding="3dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/shangjiaphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/backgroundline"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:padding="3dp"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:padding="3dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/userphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordblack"
                    android:textSize="16dp"
                    android:hint="暂无数据"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>